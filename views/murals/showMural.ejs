<% include ../partials/header %>

<div class="container mt-5">
  <div class="card mb-3">
    <img class="card-img-top" src="<%= mural.image %>" alt="">
    <div class="card-body">
      <h3 class="card-title"><%= mural.title %></h3>
      <h5 class="card-title"><span class="text-muted">artist: </span> <%= mural.artist %></h5>
      <p class="card-text"><%= mural.location.city %>, <%= mural.location.state %></p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      <p class="card-text"><%= mural.info %></p>
      <p class="card-text">posted by: <%= mural.credit %></p>
    </div>
  </div>
</div>

<% include ../partials/footer %>


