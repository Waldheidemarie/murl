<% include ../partials/header %>

<div class="container css-forms">
  <form action="/murals" method="POST">
    <div class="input-group row mb-3">
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Title"
        required
      />
    </div>
    <div class="input-group row mb-3">
      <input
        type="text"
        class="form-control"
        name="artist"
        placeholder="Artist"
        required
      />
    </div>
    <div class="input-group row mb-3">
      <input
        id="searchTextField"
        type="text"
        size="50"
        class="form-control"
        name="city"
        placeholder="City"
        required
      />
    </div>
    <div class="input-group row">
      <img id="imgTag" class="" required />
    </div>
    <div class="input-group row mb-3">
      <div class="custom-file">
        <input
          type="file"
          class="custom-file-input"
          id="inputFile"
          onchange="previewFile()"
        />
        <label
          class="custom-file-label text-muted"
          for="inputFile"
          aria-describedby="inputUpload"
          >Choose Image</label
        >
      </div>
    </div>
    <div class="form-group row">
      <button type="submit" class="btn btn-dark btn-lg">Submit</button>
    </div>
  </form>
</div>

<% include ../partials/footer %>

